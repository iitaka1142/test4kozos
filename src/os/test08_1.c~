#include "../misc/defines.h"
#include "kozos.h"
#include "lib.h"

#define PROMPT "> "

int test08_1_main(int argc, char * argv[])
{
  static char buf[32];
  static Bool exit = false;
  
  puts("test08_1_main started\n");
  
  while(! exit) {
    puts(PROMPT); 
    gets(buf);
  
    if (strncmp(buf, "echo ", 5) == Same) {
      puts(&(buf[5]));
      puts("\n");
    }
    if (strncmp(buf, "exit", 4) == Same) {
      exit = true;
    }
    else {
      puts("unknown.\n");
    }
    
    puts(PROMPT);
  }
  
  puts("test08_1 exit.\n");
  
  return EXIT_SUCCESS;
}

