#ifndef _KOZOS_SYSCALL_H_INCLUDED_
#define _KOZOS_SYSCALL_H_INCLUDED_

#include "../misc/defines.h"

/* システムコール番号の定義 */
typedef enum {
  KZ_SYSCALL_TYPE_RUN,
  KZ_SYSCALL_TYPE_EXIT
} kz_syscall_type_t;

/* システムコール時のパラメータ格納領域 */
typedef union {
  /* kz_runのためのパラメータ */
  struct {
    kz_func_t func;
    char * name;
    int stack_size;
    int argc;
    char * *argv;
    kz_thread_id_t ret;
  } run;
    
  /* kz_exitのためのパラメータ */
  struct {
    int dummy;
  } exit;
} kz_syscall_param_t;

#endif
